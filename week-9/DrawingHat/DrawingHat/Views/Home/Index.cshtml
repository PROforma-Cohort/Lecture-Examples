<div ng-app="main" ng-controller="hatController">
    <br/>
    <div class="row">
        <div class="col-md-6">
            <form ng-submit="addPersonToHat()">
                <input type="text" ng-model="newPersonName" /> <button class="btn btn-info">+</button>
            </form>
            <ul class="list-group">
                <li class="list-group-item" ng-repeat="person in names track by $index">
                    <div class="row">
                        <div class="col-md-10">
                            {{person.Name}}
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-danger" ng-click="deletePerson(person)"><i class="glyphicon glyphicon-erase"></i></button>
                        </div>
                    </div>

                </li>
            </ul>
        </div>
        <div class="col-md-6">
            <form ng-submit="createGroups()">
                <div class="form-group">
                    <label for="groupSize">Group Size</label>
                    <input type="number" id="groupSize" ng-model="groupSize" min="1" max="{{(names.length/2) + 1}}" />
                </div>
                <button class="btn btn-success">Create Groups</button>
            </form>
            <form ng-submit="divideIntoNumberOfGroups()">
                <div class="form-group">
                    <label for="groupSize">Number OF Groups</label>
                    <input type="number" id="groupSize" ng-model="numberOfGroups" min="1" max="{{names.length}}" />
                </div>
                <button class="btn btn-success">Divide Into Groups</button>
            </form>
        </div>
    </div>
    <section>
        <h2>The Hat</h2>
    </section>

    <section>
        <div ng-repeat="group in groups track by $index">
            <ul>
                <li ng-repeat="person in group.People track by $index">{{person.Name}}</li>
            </ul>
            <hr />
        </div>
    </section>
</div>